{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "rootDir": ".",
        "pretty": true,
        "paths": {
            "@src": ["src"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "files": ["./node_modules/tsx-control-statements/index.d.tsx"]
}
